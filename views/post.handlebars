  <div class="flex-grow">


  <div class="card  bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">{{post.title}}</h2>
      <p>{{post.content}}</p>
      <p>Blog by: {{post.bloguser.author}}</p>
      <p>Date Created:</p>
      <div class="card-actions justify-end">
        {{#if loggedIn}}
        <button class="btn btn-primary" onclick="addcommentmodal.showModal()">Add Comment</button>
        {{/if}}
      </div>
    </div>
  </div>

  </div>



  {{!-- {{#if loggedIn}}
  <h2>Create a comment:</h2>
